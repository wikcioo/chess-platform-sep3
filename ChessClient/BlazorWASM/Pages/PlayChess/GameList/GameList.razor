@page "/GameList"
<AuthorizeView>
    <Authorized>
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudTabs Elevation="0" Rounded="true" Centered="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="Join a game">
                    <JoinableGames></JoinableGames>
                </MudTabPanel>
                <MudTabPanel Text="Spectate game">
                    <SpectateableGames></SpectateableGames>
                </MudTabPanel>
            </MudTabs>
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        <MudText Typo="Typo.h2" Align="Align.Center" Class="ma-5">You are not authorized to view this page.</MudText>
    </NotAuthorized>
</AuthorizeView>