@using HttpClients.ClientInterfaces
@using MudBlazor
@inject NavigationManager NavMgr
@inject IAuthService AuthService
@namespace Login

<AuthorizeView>
    <Authorized>
 <MudIconButton Icon="@Icons.Filled.ChevronRight" Title="Logout" Color="Color.Inherit" Edge="Edge.End" OnClick="@(_ => Logout())" />
    </Authorized>
    <NotAuthorized>
        
         <MudIconButton Icon="@Icons.Filled.ChevronLeft" Title="Login" Color="Color.Inherit" Edge="Edge.End" OnClick="@(_ => Login())" />
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        NavMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        NavMgr.NavigateTo("/",true);
    }

}