
@* Make nicknames searchable, give database of player names *@
<MudTextField T="string" Label="Your friend's nickname" Variant="Variant.Filled" Required="true" RequiredError="User name is required!" @bind-Value="OpponentName"/>

@code {

    private string _opponentName = "";
    
    [Parameter]
    public string OpponentName {
        get => _opponentName;
        set
        {
            if (_opponentName == value ) return;
            _opponentName = value;
            OpponentNameChanged.InvokeAsync(value);
        }
    }
    
    [Parameter]
    public EventCallback<string> OpponentNameChanged { get; set; }
}