<MudAppBar Color="Color.Primary" Elevation="2">
    <MudBreakpointProvider>
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudText Typo="Typo.h5">VIA Chess</MudText>
            <MudToolBar>
                <AppBarContents/>
            </MudToolBar>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        </MudHidden>
    </MudBreakpointProvider>
    <MudSpacer/>
    <AuthorizeView>
        <NotAuthorized>
            <MudText Class="mr-5" Color="Color.Inherit">Not logged in</MudText>
        </NotAuthorized>
        <Authorized>
            <MudText Class="mr-5" Color="Color.Inherit">Logged in as: @context.User.Identity!.Name</MudText>
        </Authorized>
    </AuthorizeView>
    <LoginButtons/>
</MudAppBar>

<MudDrawer @bind-Open="@_open" Color="Color.Surface" Elevation="3">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">VIA Chess</MudText>
    </MudDrawerHeader>
    <MudDrawerContainer>
        <MudStack>
            <AppBarContents/>
        </MudStack>
    </MudDrawerContainer>
</MudDrawer>

@code {
    bool _open = false;

    void ToggleDrawer()
    {
        _open = !_open;
    }
}